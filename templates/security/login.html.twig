{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>
    body {
        background: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
        background-size: cover;
    }
    .login-outer {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 32px 0;
    }
    .login-card {
        border-radius: 20px;
        box-shadow: 0 4px 24px 0 rgba(0,0,0,0.18);
        overflow: hidden;
        max-width: 400px;
        width: 100%;
        margin: 0 auto;
        background: rgba(255,255,255,0.97);
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .login-header {
        background: linear-gradient(90deg, #ec407a 0%, #d81b60 100%);
        border-radius: 0 0 30px 30px;
        padding: 32px 24px 16px 24px;
        text-align: center;
    }
    .login-header h2 {
        color: #fff;
        font-weight: bold;
        margin: 0;
        letter-spacing: 1px;
    }
    .login-btn {
        background: linear-gradient(90deg, #ec407a 0%, #d81b60 100%);
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        padding: 12px 0;
        margin-top: 16px;
        width: 100%;
        transition: background 0.2s;
        box-shadow: 0 2px 8px 0 rgba(236,64,122,0.10);
    }
    .login-btn:hover {
        background: linear-gradient(90deg, #d81b60 0%, #ec407a 100%);
    }
    .login-card .form-control {
        border-radius: 8px;
        background: #f5f5f5;
        border: 1px solid #e0e0e0;
        width: 100%;
        font-size: 1rem;
    }
    .form-group {
        margin-bottom: 22px;
        margin-top: 20px;  
 }
    .form-check {
        margin-bottom: 22px;
    }
    .login-footer {
        text-align: center;
        margin-top: 16px;
        margin-bottom: 20px;
        color: #888;
        font-size: 1rem;
    }
    .login-footer a {
        color: #d81b60;
        font-weight: bold;
        text-decoration: none;
        margin-left: 4px;
    }
    .login-footer a:hover {
        text-decoration: underline;
    }
    .form-check-label {
        font-size: 1rem;
        color: #444;
    }
</style>

<div class="login-outer">
    <div class="login-card">
        <div class="login-header">
            <h2>Se connecter</h2>
        </div>
        <div class="p-4">

        <div class="text-center mb-3">
            <img src="{{ asset('assets/img/IDM_Couture.jpg') }}" alt="Logo" class="img-fluid" style="max-width: 75px; margin-left: 160px; margin-top: 20px">
        </div>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

       <div class="form-group">
        <label for="inputUsername">Username</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
        </div>
        <div class="form-group">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn login-btn" type="submit">SE CONNECTER</button>
            </form>
            <div class="login-footer">
                Vous n'avez pas de compte ?<a href="{{ path('app_register') }}">Inscrivez-vous</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
