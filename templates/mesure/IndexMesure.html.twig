  {% extends 'layout_main.html.twig' %}
{% block title %}Liste mesures
	{% endblock %}
{% block autresfichierscss %}
 
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Liste mesures</h1>
             {% if classe is defined %}
			<div class="{{classe}}">{{resultat}}</div>
		{% endif %}
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              {# <li class="breadcrumb-item"><a href="#">Accueil</a></li> #}
              {# <li class="breadcrumb-item active">Liste mesures</li> #}
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tableau de liste des mesures</h3>
				          <div class="card-tools">
                  <div class="input-group input-group-sm">
                   <a href="{{ path('ajout_mesure') }}" class="btn btn-success btn-sm ml-3">
										<i class="fa fa-plus"></i>
										Nouveau mesure
									</a>
                  
					        </div></div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="mesure" class="table table-bordered table-striped">
                  <thead>
                    <tr>
            
                    <tr style="font-weight: bold;">
                      <th>Nom client</th>
                      <th>Epaules</th>
                      <th>Poitrines</th>
                      <th>Manches</th>
                      <th>Encolure</th>
                      <th>Poigne</th>
                      <th>Ecart dos</th>
                      <th>Longueur</th>
                      <th>Tour ventrale</th>
                      <th>Cuisse</th>
                      <th>Fermeture</th>
                      <th>Ceinture</th>
                      <th>Taille</th>
                      <th>Longueur pantalon</th>
                      <th>Bas pantalon</th>
                      <th>Actions</th>
                   
							      </tr>
				          </thead>
                  <tbody>
                  {% block alerts %}
  {% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        {%if type == 'error'%} {% set type = 'danger' %} {%endif%}
        {%if type == 'message'%} {% set type = 'info' %} {%endif%}
        <div class="alert alert-{{ type }} alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <p>{{ message|raw }}</p>
        </div>
    {% endfor %}
  {% endfor %}
                 {% endblock %}
                    {% for mesure in mesures %}
								    <tr>
                      <td>{% if  mesure.user %}
                      {{ mesure.user.firstName |capitaize_first}} {{ mesure.user.lastName |capitaize_first}}
                      
                      {% else %}
                      
                      {% endif %}
                      </td>
                      
                      <td>{{ mesure.epaule }} cm</td>
                      <td>{{ mesure.poitrine }} cm</td>
                      <td>{{ mesure.manche }} cm</td>
                       <td>{{ mesure.encolure }} cm</td>
                      <td>{{ mesure.poignee }} cm</td>
                      <td>{{ mesure.ecartDos }} cm</td>
                       <td>{{ mesure.longueur }} cm</td>
                      <td>{{ mesure.tourVentrale }} cm</td>
                       <td>{{ mesure.cuisse }} cm</td>
                      <td>{{ mesure.fermeture }} cm</td>
                      <td>{{ mesure.ceinture }} cm</td>
                      <td>{{ mesure.taille }} cm</td>
                       <td>{{ mesure.longueurPantalon }} cm</td>
                      <td>{{ mesure.basPantalon }} cm</td>
                         {# {%if is_granted(role_admin) %} #}
                       
                      <td><a class="btn btn-info btn-sm" href="{{ path('edit_mesure', {'id': mesure.id}) }}" onclick="return confirm('Etes-vous sûr de vouloir modifier cette mesure ?')">
                              <i class="fa fa-edit"></i>
                              <span class="sr-only">Editer</span>
                          </a> 
                       <a class="btn btn-danger btn-sm" href="{{ path('delete_mesure', {'id': mesure.id}) }}" onclick="return confirm('Etes-vous sûr de vouloir supprimer cette mesure ?')">
                              <i class="fa fa-trash"></i>
                              <span class="sr-only">delete</span>
                          </a> 
									      </td>
                        {# {% endif %} #}
								    </tr>
						      	{% endfor %}
                  </tbody>
                  <tfoot>
                    
                    <tr style="font-weight: bold;">
                      <th>Nom client</th>
                      <th>Epaules</th>
                      <th>Poitrines</th>
                      <th>Manches</th>
                      <th>Encolure</th>
                      <th>Poigne</th>
                      <th>Ecart dos</th>
                      <th>Longueur</th>
                      <th>Tour ventrale</th>
                      <th>Cuisse</th>
                      <th>Fermeture</th>
                      <th>Ceinture</th>
                      <th>Taille</th>
                      <th>Longueur pantalon</th>
                      <th>Bas pantalon</th>
                      <th>Actions</th>
                  
							      </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

  {% endblock %}
