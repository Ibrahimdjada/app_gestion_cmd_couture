{% block content %}
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Modification  pret</h1>
             {% if classe is defined %}
			<div class="{{classe}}">{{resultat}}</div>
