      <div class="container-fluid">
     <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
               
              </div>


        <h6 class="font-weight-bolder mb-0">pret de Mr/Mm/Mlle :{% if  pret.usert %}{{ pret.usert.firstname |capitaize_first}} {{ pret.usert.lastname |capitaize_first}}  {% else %} {% endif %}</h6>
    </div>
</nav>

<div class="container form-section">
    <div class="row">
        <div class="col-md-8">
            <form method="POST">
                {{ form_start(form) }}
    <div class="form-group">
   
    {{ form_label(form.prd, 'Periode') }}
