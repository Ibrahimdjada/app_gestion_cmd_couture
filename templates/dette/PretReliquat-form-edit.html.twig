{% extends 'layout_main.html.twig' %}
{% block title %}Versement  pret
	{% endblock %}
{% block content %}
<section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Versement  pret</h1>
             {% if classe is defined %}
			<div class="{{classe}}">{{resultat}}</div>
		{% endif %}
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              {# <li class="breadcrumb-item"><a href="#">Accueil</a></li>
              <li class="breadcrumb-item active">Modification  pret</li> #}
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
	    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
     
</nav>

<div class="container form-section">
    <div class="row">
        <div class="col-md-8">
        <h6 class="font-weight-bolder mb-0">Rembousement du pret de {% if pret.usert %}{{pret.usert.firstname |capitaize_first}} {{pret.usert.lastname |capitaize_first}}  {% else %} {% endif %} de la somme de {{ pret.reste|number_format(0, '.', ' ') }} FCFA </h6>
    
            <form method="POST">
                {{ form_start(form) }}
    <div class="form-group">
            
            {{ form_label(form.reliquat, 'Entre le montant (FCFA)') }}
            {{ form_widget(form.reliquat, {'attr': {'class': 'form-control',
      'placeholder':'Entrez le montant'
      }}) }}
            </div>
   
     <div class="form-group" style="padding-left: 40px;">
            <button type="submit" class="btn btn-primary"style="margin-right:15px">Confirmer</button>
            <i class ="fa fa-ban"><a href="{{ path('list_pret')}}"> <strong>Annuler</strong></a></i>

             </div>
    {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
{% block autresFichiersJs %}
<!-- jQuery -->
<script src="{{ asset('plugins/jquery/jquery.min.js') }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ asset('plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
<!-- AdminLTE App -->
<script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
<!-- AdminLTE for demo purposes -->
<script src="{{ asset('dist/js/demo.js') }}"></script>
<!-- Summernote -->
<script src="{{ asset('plugins/summernote/summernote-bs4.min.js') }}"></script>
<script>
  $(function () {
    // Summernote
    $('.textarea').summernote()
  })
</script>
{% endblock %}

