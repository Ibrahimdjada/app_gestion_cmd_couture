
<div>
    {# Messages d'erreur / succès spécifiques au formulaire #}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <p>
        Mr :
        {% if commande.user %}
            {{ commande.user.firstname }} {{ commande.user.lastname }}
        {% endif %}
        — Reste à payer :
        <strong>{{ commande.reste|number_format(0, '.', ' ') }} FCFA</strong>
    </p>

    {{ form_start(form, {
        'action': path('cmd_reliquat', {id: commande.id}),
        'attr': {'id': 'form-reliquat'}
    }) }}

        <div class="form-group">
            {{ form_label(form.reliquat, 'Versement (FCFA)') }}
            {{ form_widget(form.reliquat, {
                'attr': {
                    'class': 'form-control',
                    'placeholder':'Entrez le montant'
                }
            }) }}
            {{ form_errors(form.reliquat) }}
        </div>

        <div class="form-group text-right mt-3">
            <button type="submit" class="btn btn-primary">Valider</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        </div>

    {{ form_end(form) }}
</div>
