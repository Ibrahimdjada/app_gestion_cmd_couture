<script>
    document.addEventListener("DOMContentLoaded", function() {

        /* -----------------------------------
          1️⃣ CONTRÔLE DU TÉLÉPHONE
        ----------------------------------- */
        const phoneInputs = document.querySelectorAll('input[name$="[telephone]"]');

        phoneInputs.forEach(input => {
            input.addEventListener('input', function() {

                this.value = this.value.replace(/[^0-9]/g, '');

                if (this.value.length > 8) {
                    this.value = this.value.slice(0, 8);
                }

                if (this.value.length > 0 && !['7', '8', '9'].includes(this.value[0])) {
                    this.setCustomValidity("Le numéro doit commencer par 7, 8 ou 9.");
                } else if (this.value.length > 0 && this.value.length < 8) {
                    this.setCustomValidity("Le numéro doit contenir 8 chiffres.");
                } else {
                    this.setCustomValidity("");
                }
            });

            input.addEventListener("blur", function() {
                const val = this.value.trim();
                if (val !== "" && allPhones.includes(val)) {
                    this.setCustomValidity("Ce numéro existe déjà !");
                }
            });
        });



        /* -----------------------------------
          2️⃣ CONTRÔLE MOT DE PASSE (min 4)
          ⚠ Fonctionne pour Ajout + Édition
        ----------------------------------- */

        const pwdInputs = document.querySelectorAll('input[name$="[password]"], input[name$="[plainPassword]"]');

        pwdInputs.forEach(input => {

            input.addEventListener("input", function() {

                // Édition : password vide = OK car on ne change pas !
                if (this.value.length === 0 && this.required === false) {
                    this.setCustomValidity("");
                    return;
                }

                if (this.value.length < 4) {
                    this.setCustomValidity("Le mot de passe doit contenir au minimum 4 caractères.");
                } else {
                    this.setCustomValidity("");
                }
            });
        });



        /* -----------------------------------
          3️⃣ EMAIL UNIQUE (sans AJAX)
        ----------------------------------- */
        const allEmails = [
            {% for u in tailleurs %}
                "{{ u.email|lower }}",
            {% endfor %}
            {% for u in disabledUsers %}
                "{{ u.email|lower }}",
            {% endfor %}
        ];

        const emailInputs = document.querySelectorAll('input[name$="[email]"]');

        emailInputs.forEach(input => {
            input.addEventListener("blur", function() {
                const val = this.value.trim().toLowerCase();
                if (val !== "" && allEmails.includes(val)) {
                    this.setCustomValidity("Cet email existe déjà !");
                }
            });

            input.addEventListener("input", function() {
                this.setCustomValidity("");
            });
        });



        /* -----------------------------------
          4️⃣ TÉL UNIQUE (sans AJAX)
        ----------------------------------- */
        const allPhones = [
            {% for u in tailleurs %}
                "{{ u.telephone }}",
            {% endfor %}
            {% for u in disabledUsers %}
                "{{ u.telephone }}",
            {% endfor %}
        ];

    });
</script>
