  {% extends 'layout_main.html.twig' %}
{% block title %}Liste tailleurs
	{% endblock %}
{% block autresfichierscss %}
 
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Liste tailleurs</h1>
             {% if classe is defined %}
			<div class="{{classe}}">{{resultat}}</div>
		{% endif %}
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              {# <li class="breadcrumb-item"><a href="#">Accueil</a></li> #}
              {# <li class="breadcrumb-item active">Liste tailleurs</li> #}
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tableau de liste des tailleurs</h3>
				          <div class="card-tools">
                  <div class="input-group input-group-sm">
                   <button class="btn btn-success" data-toggle="modal" data-target="#addTailleurModal">
                    <i class="fa fa-plus"></i> Nouveau tailleur
                </button>
					        </div></div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="tailleur" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Nom & Prénom</th>
                      <th>E-mail</th>
                      <th>Telephone</th>
                      <th>Adresse</th>
                      <th>Actions</th>
                      
							      </tr>
				          </thead>
                  <tbody>
                  {% block alerts %}
  {% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        {%if type == 'error'%} {% set type = 'danger' %} {%endif%}
        {%if type == 'message'%} {% set type = 'info' %} {%endif%}
        <div class="alert alert-{{ type }} alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            <p>{{ message|raw }}</p>
        </div>
    {% endfor %}
  {% endfor %}
                 {% endblock %}
                    {% for tailleur in tailleurs %}
								    <tr>
                    <td>{{ tailleur.username }}</td>
                      <td>{{ tailleur.firstName |capitaize_first}} {{ tailleur.lastName |capitaize_first}}</td>
                      <td style="color:blue"><strong>{{ tailleur.telephone }}</strong></td>
                    <td style="color:green"><strong>{{ tailleur.email }}</strong></td>
                    <td><strong>{{ tailleur.adresse }}</strong></td>
                      
                         {# {%if is_granted(role_admin) %} #}
                       
                     <td><button class="btn btn-info btn-sm" data-toggle="modal" data-target="#editTailleurModal{{ tailleur.id }}" >
                                <i class="fa fa-edit"></i>
                            </button>
                          
									      <form method="post" action="{{ path('desact_tailleur', {id: tailleur.id}) }}" style="display:inline-block;" onclick="return confirm('Voudriez vous desactiver ce  tailleur ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tailleur.id) }}">
                                <button type="submit" class="btn btn-warning btn-sm"><i class="fa fa-ban"></i></button>
                            </form>
                          
									      </td>
                        {# {% endif %} #}
								    </tr>
                    <div class="modal fade" id="editTailleurModal{{ tailleur.id }}" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                  <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                      <h5 class="modal-title">Modifier {{ tailleur.firstName }} {{ tailleur.lastName }}</h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    {{ form_start(editForms[tailleur.id], {'action': path('edit_tailleur', {'id': tailleur.id}), 'method':'POST'}) }}
                    <div class="modal-body">
                      <div class="row">
                        <div class="col-md-6">{{ form_row(editForms[tailleur.id].firstName) }}</div>
                        <div class="col-md-6">{{ form_row(editForms[tailleur.id].lastName) }}</div>
                        <div class="col-md-6">{{ form_row(editForms[tailleur.id].email) }}</div>
                        <div class="col-md-6">
                          {{ form_label(editForms[tailleur.id].telephone) }}
                          {{ form_widget(editForms[tailleur.id].telephone) }}
                          {{ form_errors(editForms[tailleur.id].telephone) }}
                        </div>

                        <div class="col-md-6">{{ form_row(editForms[tailleur.id].adresse) }}</div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Annuler</button>
                      <button type="submit" class="btn btn-primary">Modifier</button>
                    </div>
                    {{ form_end(editForms[tailleur.id]) }}
                  </div>
                </div>
              </div>
						      	{% endfor %}
                  </tbody>
                  
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
            
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
<div class="modal fade" id="addTailleurModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">Ajouter un tailleur</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      {{ form_start(form, {'action': path('ajout_tailleur'), 'method':'POST'}) }}
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">{{ form_row(form.firstName) }}</div>
          <div class="col-md-6">{{ form_row(form.lastName) }}</div>
          <div class="col-md-6">{{ form_row(form.email) }}</div>
          <div class="col-md-6">
            {{ form_label(form.telephone) }}{{ form_widget(form.telephone) }}{{ form_errors(form.telephone) }}
          </div>
          <div class="col-md-6">{{ form_row(form.adresse) }}</div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
  {% endblock %}
