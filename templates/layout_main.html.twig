<script>
  $(function () {
    // Correction du menu déroulant pour garder le menu ouvert sur la page active
    var url = window.location;
    var href = url.href;
    var afterWithout = href.substr(0, href.lastIndexOf("/"));

    // Active link
    $('ul.nav-sidebar a').filter(function() {
      return this.href == url || this.href == afterWithout;
    }).addClass('active');

    // Ouvre le menu parent si un sous-onglet est actif
    $('ul.nav-treeview a').filter(function() {
      return this.href == url || this.href == afterWithout;
    }).parents('.has-treeview').addClass('menu-open').children('a').addClass('active');
  });
</script>
